<!--下面的方式将视图定义到了体分段中，即此时视图被定义成了一个独立的分段-->
@section Body{
    <div class="view">
        This is a list of fruit names:

        @foreach (string name in Model)
        {
            <span><b>@name</b></span>
        }
    </div>
}

@section Footer{
    <div class="view">
        This is the footer
    </div>
}
